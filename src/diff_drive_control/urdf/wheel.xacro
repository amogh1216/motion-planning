<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="wheel">

<xacro:property name="wheel_len" value="0.02"/>
<xacro:property name="wheel_rad" value="0.05"/>

  <xacro:macro name="wheel" params="name parent_link xyz">
    <link name="${name}">
      <visual>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <geometry>
          <cylinder radius="${wheel_rad}" length="${wheel_len}"/>
        </geometry>
        <material name="black">
          <color rgba="0 0 0 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <geometry>
          <cylinder radius="${wheel_rad}" length="${wheel_len}"/>
        </geometry>
      </collision>
      <inertial>
      <!-- mass was 0.2 -->
        <mass value="2"/> 
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia
          ixx="0.001" ixy="0.0" ixz="0.0"
          iyy="0.001" iyz="0.0"
          izz="0.001"/>
      </inertial>
    </link>

    <joint name="joint_${name}" type="continuous">
      <parent link="${parent_link}"/>
      <child link="${name}"/>
      <origin xyz="${xyz}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

</robot>
